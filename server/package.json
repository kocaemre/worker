{
  "name": "zepatrol-worker",
  "version": "1.0.0",
  "description": "Zepatrol blockchain node health-check worker",
  "license": "MIT",
  "type": "module",
  "main": "src/index.js",
  "scripts": {
    "dev": "node --env-file .env src/index.js",
    "start": "node src/index.js",
    "lint": "eslint \"src/**/*.js\"",
    "format": "prettier --write \"src/**/*.js\"",
    "test": "node --experimental-vm-modules $(npm bin)/jest",
    "generate": "prisma generate",
    "migrate": "prisma migrate deploy",
    "seed": "node prisma/seed.js",
    "test-alert": "node scripts/test-alert.js"
  },
  "postinstall": "npm run generate",
  "dependencies": {
    "@prisma/client": "^5.14.0",
    "axios": "^1.6.8",
    "dotenv": "^16.3.1",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.11",
    "pino": "^8.22.0",
    "prom-client": "^14.4.1",
    "telegraf": "^4.16.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.1",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "testcontainers": "^9.4.1"
  }
} 