# Rename this file to .env before running the worker

# PostgreSQL / Supabase connection string
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/postgres

# Cron schedule (default every 15 minutes)
CHECK_INTERVAL_CRON=*/15 * * * *

# SMTP settings
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USER=user@example.com
EMAIL_PASS=secret

# Test email recipient (optional, defaults to EMAIL_USER)
TEST_EMAIL_TO=mail@gmail.com

# Telegram (optional)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Node environment
NODE_ENV=development 